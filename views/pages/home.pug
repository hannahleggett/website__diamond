extends ../base.pug

block variables
  - var template = 'home'

block content 
  .home
    .home__wrapper
      .home__list
        each item in home
          each work in item.data.projects
            a(href=Link(work.project) data-src=work.project.data.image.url).home__list__link
              .home__list__link__text=work.project.data.title
            
            //- .home__list__media__wrapper
            //-   figure.home__list__media
            //-     img(data-src=work.project.data.image.url, alt="").home__list__media__image
      
      .home__toggle
        a.home__toggle__link(href="/play") Play